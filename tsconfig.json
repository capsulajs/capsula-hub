{
  "rules": {
    "max-line-length": {
      "options": 120,
      "severity": "warning"
    },
    "trailing-comma": [
      false,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "function-name": [
      true,
      {
        "method-regex": "^[a-z][\\w\\d]+\\$?$",
        "function-regex": "^[a-z][\\w\\d]+\\$?$"
      }
    ],
    "variable-name": {
      "options": ["check-format"],
      "severity": "warning"
    },
    "mocha-avoid-only": [false],
    "no-console": [true]
  },
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2017", "es6"],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
